[core]
	editor = vim
	whitespace = fix,-indent-with-non-tab,trailing-space,cr-at-eol
	pager = less
	excludesfile = ~/.config/git/ignore
[init]
	defaultBranch = main
[user]
    email = bernardoeulersantos@gmail.com
    name = Bernardo Euler
	username = bernardoeuler
[github]
	user = bernardoeuler
	token = token
[color]
	ui = auto
[color "branch"]
	current = green bold
	local = white
	remote = blue
[color "diff"]
	meta = yellow
	frag = blue
	old = red bold
	new = green bold
	whitespace = red reverse
[color "status"]
	added = green bold
	changed = red bold
	untracked = yellow bold
